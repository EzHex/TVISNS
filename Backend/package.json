  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "migration:generate": "drizzle-kit generate:pg --schema=./src/db/schema/*",
    "migration:push": "node -r esbuild-register src/db/migrate.ts",
    "migration": "npm run migration:generate && npm run migration:push",
    "test": "npm run seed && npm run test:vitest",
    "test:vitest": "vitest run --pool=forks",
    "coverage": "vitest run --coverage",
    "seed": "node -r esbuild-register src/db/seedDatabase.ts"
  },
